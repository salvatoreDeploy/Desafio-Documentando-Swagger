{
    "openapi": "3.0.0",
    "info": {
        "title": "SOLID",
        "description": "Documentação sobre api aprimoramento de Solid",
        "version": "1.0.0",
        "contact": {
            "email": "liderhenrique@gmail.com"
        }

    },
    "tags": [
        {
            "name": "users",
            "description": "Gerenciamento de Usuario"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "tags":["users"],
                "summary": "Criar um Usuario",
                "requestBody": {
                    "required": true,
                    "description": "Campos obrigatorios de um usuario",
                    "content": {
                        "application/json": {
                            "schema":{
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Teste",
                                    "email": "teste@email.com"
                                }
                            }
                        }
                    }
                },
                "response": {
                    "201": {
                        "description": "Operação Realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "string",
                                            "enum": [
                                                ""
                                            ]
                                        },
                                        "id":{
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "admin": false,
                                        "id": "a32d8169-56ef-4d48-a2c1-a595ff748116",
                                        "name": "Teste",
                                        "email": "teste@email.com.br",
                                        "created_at": "2021-03-28T22:30:10.992Z",
                                        "updated_at": "2021-03-28T22:30:10.992Z"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email já está sendo utilizado.",
                        "content": {
                          "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                  "error": {
                                    "type": "string"
                                  }
                                },
                                "example": {
                                  "error": "This email is already in use."
                                }
                            }
                          }
                        }
                    }
                }
            },
            "get": {
                "tags": ["users"],
                "summary": "Retorna todos os usuários.",
                "description": "Somente usuário admin pode acessar.",
                "parameters": [
                  {
                    "name": "user_id",
                    "in": "header",
                    "required": true,
                    "schema": {
                      "type": "string",
                      "format": "uuid"
                    }
                  }
                ],
                "responses": {
                  "200": {
                    "description": "Operação realizada com sucesso.",
                    "content": {
                      "application/json": {
                        "schema": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "admin": {
                                  "type": "boolean",
                                  "enum": [
                                    ""
                                  ]
                                },
                                "id": {
                                  "type": "string"
                                },
                                "name": {
                                  "type": "string"
                                },
                                "email": {
                                  "type": "string"
                                },
                                "created_at": {
                                  "type": "string"
                                },
                                "updated_at": {
                                  "type": "string"
                                }
                              }
                            },
                            "example": [
                              {
                                "admin": true,
                                "id": "cbf62820-897e-4326-83c1-78df16c5723c",
                                "name": "Nome",
                                "email": "email@email.com.br",
                                "created_at": "2021-03-29T10:18:14.127Z",
                                "updated_at": "2021-03-29T10:18:23.138Z"
                              },
                              {
                                "admin": false,
                                "id": "d32e9e4e-43cd-4f64-a393-4f0158c9e348",
                                "name": "Nome",
                                "email": "email@email.com.br",
                                "created_at": "2021-03-29T10:20:43.081Z",
                                "updated_at": "2021-03-29T10:20:43.081Z"
                              }
                            ]
                        }
                      }
                    }
                  },
                  "400": {
                    "description": "Usuário sem permissão ou Usuário não encontrado.",
                    "content": {
                      "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                              "error": {
                                "type": "string"
                              }
                            },
                            "example": {
                              "error": "You need to be an administrator to list all users."
                            }
                        }
                      }
                    }
                  }
                }
              }
            },
            "/users/{user_id}": {
              "get": {
                "tags": ["users"],
                "summary": "Retorna um usuário específico",
                "parameters": [
                  {
                    "name": "user_id",
                    "in": "path",
                    "description": "ID do usuário",
                    "required": true,
                    "schema": {
                      "type": "string",
                      "format": "uuid"
                    }
                  }
                ],
                "responses": {
                  "200": {
                    "description": "Operação realizada com sucesso.",
                    "content": {
                      "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                              "admin": {
                                "type": "boolean",
                                "enum": [
                                  ""
                                ]
                              },
                              "id": {
                                "type": "string"
                              },
                              "name": {
                                "type": "string"
                              },
                              "email": {
                                "type": "string"
                              },
                              "created_at": {
                                "type": "string"
                              },
                              "updated_at": {
                                "type": "string"
                              }
                            },
                            "example": {
                              "admin": false,
                              "id": "a32d8169-56ef-4d48-a2c1-a595ff748116",
                              "name": "Nome",
                              "email": "email@email.com.br",
                              "created_at": "2021-03-28T22:30:10.992Z",
                              "updated_at": "2021-03-28T22:30:10.992Z"
                            }
                        }
                      }
                    }
                  },
                  "404": {
                    "description": "Usuário não encontrado.",
                    "content": {
                      "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                              "error": {
                                "type": "string"
                              }
                            },
                            "example": {
                              "error": "User not found."
                            }
                        }
                      }
                    }
                  }
                }
              }
            },
            "/users/{user_id}/admin": {
              "patch": {
                "tags": ["users"],
                "summary": "Permissãos de ADM ao Usuario",
                "parameters": [
                  {
                    "name": "user_id",
                    "in": "path",
                    "required": true,
                    "schema": {
                      "type": "string",
                      "format": "uuid"
                    }
                  }
                ],
                "responses": {
                  "200": {
                    "description": "Operação realizada com sucesso.",
                    "content": {
                      "application/json": {
                        "schema": {
                          "type": "object",
                          "properties": {
                            "admin": {
                              "type": "boolean",
                              "enum": [
                                ""
                              ]
                            },
                            "id": {
                              "type": "string"
                            },
                            "name": {
                              "type": "string"
                            },
                            "email": {
                              "type": "string"
                            },
                            "created_at": {
                              "type": "string"
                            },
                            "updated_at": {
                              "type": "string"
                            }
                          },
                          "example": {
                            "admin": true,
                            "id": "cbf62820-897e-4326-83c1-78df16c5723c",
                            "name": "Nome",
                            "email": "email@email.com.br",
                            "created_at": "2021-03-29T10:18:14.127Z",
                            "updated_at": "2021-03-29T10:18:23.138Z"
                          }
                        }
                      }
                    }
                  },
                  "404": {
                    "description": "Usuário não encontrado.",
                    "content": {
                      "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                              "error": {
                                "type": "string"
                              }
                            },
                            "example": {
                              "error": "User not found."
                            }
                        }
                      }
                    }
                  }
                }
            }
        }
    }
}